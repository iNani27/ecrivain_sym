{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Commentaire</h1> {% include 'ExempleAnnotationBundle:Default:menu.html.twig'%}

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Lutil</th>
                <td>{{ entity.lutil }}</td>
            </tr>
            <tr>
                <th>Letexte</th>
                <td>{{ entity.letexte }}</td>
            </tr>
            <tr>
                <th>Lemail</th>
                <td>{{ entity.lemail }}</td>
            </tr>
            <tr>
                <th>Lheure</th>
                <td>{{ entity.lheure|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('commentaire') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('commentaire_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
