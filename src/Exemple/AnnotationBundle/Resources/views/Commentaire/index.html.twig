{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Commentaire list</h1> {% include 'ExempleAnnotationBundle:Default:menu.html.twig'%}

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lutil</th>
                <th>Letexte</th>
                <th>Lemail</th>
                <th>Lheure</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('commentaire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.lutil }}</td>
                <td>{{ entity.letexte }}</td>
                <td>{{ entity.lemail }}</td>
                <td>{% if entity.lheure %}{{ entity.lheure|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('commentaire_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('commentaire_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('commentaire_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
